<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView android:id="@+id/newBattleTankNameTextView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/inputTankNameTextViewString"/>
    <EditText android:id="@+id/newBattleTankNameEditText"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_below="@id/newBattleTankNameTextView"
            />
    <Button android:id="@+id/startNewBattleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newBattleTankNameEditText"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:text="@string/startBattleButtonString"
            />
</RelativeLayout>